const imagenes = [
  { src: "img/sala.jpg", alt: "Sala principal" },
  { src: "img/cocina.jpg", alt: "Cocina" },
  { src: "img/jardin.jpg", alt: "Jardín" },
  { src: "img/habitacion.jpg", alt: "Habitación" },
];

const galeria = document.getElementById("galeria");

imagenes.forEach(imagen => {
  const img = document.createElement("img");
  img.src = imagen.src;
  img.alt = imagen.alt;
  img.addEventListener("click", () => mostrarImagen(img));
  galeria.appendChild(img);
});

